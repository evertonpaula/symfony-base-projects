{% extends "@Dashboard/Dashboard/dashboard.html.twig" %}

{% block title 'Controle Usuários' %}
{% block pageName 'Controles Usuários' %}
{% block pageDescripton 'gerenciamento' %}

{% block pageRoute %}
    <li><a href="{{path("user_admin")}}"><i class="fa fa-user-plus"></i> Controle Usuários</a></li>
    <li class="active">Gerencimaneto usuários</li>
{% endblock %}

{%block stylesheets %}
    {{ parent()}}
    {% stylesheets  'public/adminlte/plugins/iCheck/all.css'
                    'public/adminlte/plugins/datatables/dataTables.bootstrap.css'
                    'public/adminlte/plugins/datatables/jquery.dataTables_themeroller.css' 
                    'public/adminlte/plugins/datatables/extensions/Responsive/css/dataTables.responsive.css' 
                    '@UserBundle/Resources/public/css/user.css'filter='cssrewrite' output='compiled/css/user.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {% javascripts 
            'public/adminlte/plugins/iCheck/icheck.min.js'
            'public/adminlte/plugins/datatables/language/pt_br.js'            
            'public/adminlte/plugins/datatables/jquery.dataTables.js'
            'public/adminlte/plugins/datatables/dataTables.bootstrap.min.js'
            'public/adminlte/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js'
            '@UserBundle/Resources/public/js/users.js' output='compiled/js/user.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block body_content %}
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
            
            <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">Tabela de usuários</h3><a title="Atualizar tabela de usuários" href class="reflash pull-right"><i class="fa fa-refresh"></i></a>
                </div>
                <div class="box-body">
                    <table data-url="{{path("user_admin_data_table")}}" id="users" data-order="[2]" class="display responsive" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>e-mail</th>
                                <th>Dt Criação</th>
                                <th>Habilitado</th>
                                <th>Locked</th>
                                <th>Conta</th>
                                <th>Credenciais</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
                        
    <div class="modal fade" id="modal_user" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
            </div><!-- /modal-content -->
        </div><!-- /modal-dialog -->
    </div><!-- /modal_address_add -->
    {{listarMenus() | raw }}
{% endblock %}
