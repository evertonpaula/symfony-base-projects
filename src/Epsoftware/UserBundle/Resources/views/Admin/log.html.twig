{% extends "@Dashboard/Dashboard/dashboard.html.twig" %}

{% block title 'Logs Usuários' %}
{% block pageName 'Logs Usuários' %}
{% block pageDescripton 'gerenciamento' %}

{% block pageRoute %}
    <li><a href="{{path("user_logs_show")}}"><i class="fa fa-user-plus"></i> Logs Usuários</a></li>
    <li class="active">Show logs usuários</li>
{% endblock %}

{%block stylesheets %}
    {{ parent() }}
    {% stylesheets  'public/adminlte/plugins/iCheck/all.css'
                    'public/adminlte/plugins/datatables/dataTables.bootstrap.css'
                    'public/adminlte/plugins/datatables/jquery.dataTables_themeroller.css' 
                    'public/adminlte/plugins/datatables/extensions/Responsive/css/dataTables.responsive.css' filter='cssrewrite' output='compiled/css/logs.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts 
            'public/adminlte/plugins/iCheck/icheck.min.js'
            'public/adminlte/plugins/datatables/language/pt_br.js'            
            'public/adminlte/plugins/datatables/jquery.dataTables.js'
            'public/adminlte/plugins/datatables/dataTables.bootstrap.min.js'
            'public/adminlte/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js' 
            '@UserBundle/Resources/public/js/logs.js' output='compiled/js/logs.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block body_content %}
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
            
            <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">Tabela de logs</h3><i class="pull-right fa fa-user-secret"></i>
                </div>
                <div class="box-body">
                    <table id="logs" data-url="{{ path("logs_admin_data_table") }}" data-order="[0]" class="display responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Login</th>
                                <th>Nome</th>
                                <th>Local</th>
                                <th>Ação</th>
                                <th>Descrição</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
