{% for add in address %}
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="info-box bg-gray-light ">
            <span class="info-box-icon {{add.categoria.bgcolor}}"><i class="fa fa-map-o"></i></span>
            <div class="info-box-content">
                <span class="info-box-number">{{add.categoria.categoria}}</span>
                <span class="info-box-text">{{add.logradouro}}, <small> {{add.numero}}</small></span>
                <span class="info-box-text">{{add.complemento}}</span>
                <span class="info-box-text">{{add.bairro}}</span>
                <span class="info-box-text">{{add.cidade.cidade}} - <small>{{add.estado.sigla}}</small></span>
                <span class="info-box-number">CEP <small>{{add.cep}}</small></span>
            </div><!-- /.info-box-content -->
        </div><!-- /.info-box -->
    </div><!-- /.col -->
{% endfor %}